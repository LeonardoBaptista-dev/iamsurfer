# Configuração para desenvolvimento local com PostgreSQL
# Crie um arquivo .env na raiz do projeto com essas variáveis

# Database Configuration (PostgreSQL local)
DATABASE_URL=postgresql://username:password@localhost:5432/iamsurfer_dev

# Flask Configuration
SECRET_KEY=sua_chave_secreta_de_desenvolvimento_muito_segura
FLASK_ENV=development
FLASK_DEBUG=True

# Configurações de upload
MAX_CONTENT_LENGTH=16777216  # 16MB em bytes
UPLOAD_FOLDER=static/uploads

# Configurações para ambiente local (não usar Cloudinary)
# Deixe essas vazias para usar armazenamento local
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Configuração para diferenciar ambiente
RENDER=False  # Força uso local mesmo se outras configurações estiverem presentes
